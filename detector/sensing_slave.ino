#include <SimpleTimer.h>
SimpleTimer thread1;

/* Pin OUT */
/******************************/
const int MQ2_in = 0;
const int MQ7_in = 0;
const int MQ9_in = 0;
/******************************/


/************************************************************************/
/*                               SET UP                                 */
/************************************************************************/
void setup(){
	Serial.begin(9600);
	thread1.setInterval(detecting, 1000);
}


/************************************************************************/
/*                                LOOP                                  */
/************************************************************************/
void loop(){
	thread1.run();
}

/************************************************************************/
/*                             Functions                                */
/************************************************************************/
void detecting(){
	if(analogRead(MQ2_in) > 0){
		Serial.write('2');
	}
	if(analogRead(MQ7_in) > 0){
		Serial.write('7');
	}
	if(analogRead(MQ9_in) > 0){
		Serial.write('9');
	}
}
